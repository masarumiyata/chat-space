-# .chat-main__message-box
-#   .chat-main__info
-#     .chat-main__group-name
-#       k
-#     .chat-main__time
-#       2020/03/28(Sat) 15:26:32
-#       %p.chat-main__message-text
-#         まだメッセージがありません
.chat-main__message-box
  .chat-main__info
    .chat-main__group-name
      = message.user.name
    .chat-main__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .lower-message
    - if message.content.present?
      %p.chat-main__message-text
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?